@code{

    private List<BlazorWebAssymblyWeb3.Server.Collection> collectionTrendings;
    private string? connectedAddress;
    protected override async Task OnInitializedAsync()
    {
        
        var hasMetaMask = await _metaMaskService.HasMetaMask();
        var isSiteConnected = await _metaMaskService.IsSiteConnected();
        if (isSiteConnected)
            connectedAddress = await _metaMaskService.GetSelectedAddress();
        
        collectionTrendings = await _http.GetFromJsonAsync<List<BlazorWebAssymblyWeb3.Server.Collection>>("Yokai/Trendings");
    }

