<div style="@(Display ? "" : "display: none;")">
    <div class="modal exit-confirm"  >
        <div> Are you sure you want to leave ?</div>
        <div class="row gap">
            <button class="button-edit" @onclick="Confirm" >Exit</button> <button class="main-button"@onclick="Stay" >Stay</button>
        </div>
    </div>
<div class="modal-bg dark-"></div>

</div>

@code {

    [Parameter] public EventCallback Confirm { get; set; }
    [Parameter] public EventCallback Stay { get; set; }
    [Parameter] public bool Display { get; set; }

}